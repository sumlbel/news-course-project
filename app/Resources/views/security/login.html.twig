{% extends 'base.html.twig' %}

{% block title %}Log in - Newscast{% endblock%}

{% block body %}
    <div class="block-width-40 margin-left-8">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form class="form" action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username">Email</label>
                <input type="text" class="form-control" placeholder="Email"
                   id="email" name="_email" value="{{ last_username }}"/>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" placeholder="{% trans %}
                Password
                {% endtrans %}"
                       id="password" name="_password" />
            </div>

            <button class="btn btn-primary" type="submit">Log in</button>
        </form>
        <div>
            <a href="{{ path('recovery') }}">
                {% trans %}
                Forgot password?
                {% endtrans %}</a>
        </div>

        {% for flashMessage in app.session.flashbag.get('can-login') %}
            <div class="alert alert-success">
                {{ flashMessage | trans}}
            </div>
        {% endfor %}
{% endblock %}