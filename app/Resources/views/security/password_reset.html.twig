{% extends 'base.html.twig' %}

{% block title %}Reset password - Newscast{% endblock%}

{% block body %}

    <p class="text-success">Please enter new password</p>
    <form class="form-inline" action="{{ path('reset', { 'token': token }) }}" method="post">
        <div class="form-group">
            <label class="sr-only" for="password">New password</label>
            <input type="password" class="form-control" placeholder="New password"
                   id="password" name="_password" />
        </div>
        <div class="form-group">
            <label class="sr-only" for="email">Repeat password</label>
            <input type="password" class="form-control" placeholder="Repeat password"
                   id="repeated_password" name="_repeatedPassword"/>
        </div>

        <button class="btn btn-primary" type="Submit">Change password</button>
    </form>
    <br>
    {% for flashMessage in app.session.flashbag.get('reset-password-failed') %}
        <div  class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

{% endblock %}