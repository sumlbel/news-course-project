{% extends 'base.html.twig' %}

{% block title %}Admin page - Newscast{% endblock%}

{% block body %}
    <header>
        <h1 class="text-center">Admin page</h1>
    </header>
    <div id="entities-grid"></div>
    <script src={{ asset('assets/ajaxgrid.js') }}></script>
    <script>
        $("#entities-grid").ajaxgrid({
            dataUrl: "http://localserver:8000/ajax/users",
            sortableColumns: ["id", "surname", "age"],
            filterableColumns: ["id", "age"],
            rowsPerPage: 5
        });
    </script>
{% endblock %}