{% extends 'base.html.twig' %}

{% block title %}{{ title }} - Newscast{% endblock%}

{% block body %}
    <header>
        <h1 class="text-center lead">{{ title }}</h1>
    </header>
    <div class="center-block block-width-80">
        <ul class="small attributes list-inline">
            <li class="margin-left-6">by {{ author }}</li>
            <li class="margin-left-6">{{ publicationDate | date('d M Y') }}</li>
            <li class="margin-left-6">{{ category }}</li>
            <li class="margin-left-6">{{ views }} views</li>
            {% if is_granted('ROLE_MODERATOR') %}
            <li class="margin-left-6 btn-group text-primary">
                <button class="dropdown-toggle btn-link"
                        type="button" data-toggle="dropdown">Settings
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('edit_article', {'id': id}) }}">Edit</a></li>
                    <li><a href="{{ path('delete_article', {'id': id}) }}"
                           onclick="return confirm('Are you sure?');">Delete</a></li>
                </ul>
            </li>
            {% endif %}
        </ul>
        <span class="fr-view">
            {{ body|raw }}
        </span>
    </div>
    <div class="text-align-center margin-height-4">
        <a href="{{ path('about') }}" class="gray-link">About Newscast</a>
    </div>
{% endblock %}