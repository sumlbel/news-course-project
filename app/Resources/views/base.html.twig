<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Newscast{% endblock %}</title>
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('favicons/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" href="{{ asset('favicons/favicon-32x32.png') }}" sizes="32x32">
        <link rel="icon" type="image/png" href="{{ asset('favicons/favicon-16x16.png') }}" sizes="16x16">
        <link rel="manifest" href="{{ asset('favicons/manifest.json') }}">
        <link rel="mask-icon" href="{{ asset('favicons/safari-pinned-tab.svg') }}" color="#5bbad5">
        <meta name="theme-color" content="#ffffff">
        {%block stylesheets%}
            {% stylesheets '@bootstrap_css' '@froala_style'%}
                <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
                <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('assets/style_fixes.css') }}"/>
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        {% block navigation %}
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="{{ path('main') }}">
                            <img src="{{ asset('assets/logo.svg') }}" width="50" height="50">
                        </a>
                        {% if is_granted('ROLE_USER') %}
                            <div class="navbar navbar-left margin-0" id="admin-navbar-collapse-1">
                                {{ knp_menu_render('main', {'currentClass': 'active'}) }}
                            </div>
                        {% endif %}
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        {% if not is_granted('ROLE_USER') %}
                            <li>
                                <a href="{{ path('login') }}">
                                    {% trans %}
                                    Log in
                                    {% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('user_registration') }}">
                                    {% trans %}
                                    Sign up
                                    {% endtrans %}
                                </a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                            <li>
                                <form class="navbar-form" role="form" method="get" action="{{ path('search') }}" >
                                    <div class="form-group">
                                        <input type="text" id="search" name="_search"
                                               class="form-control" placeholder="{% trans %}Search{% endtrans %}">
                                    </div>
                                    <button type="submit" class="btn btn-default" value='search'>
                                        {% trans %}
                                        Search
                                        {% endtrans %}
                                    </button>
                                </form>
                            </li>
                            <li>
                                <button class="dropdown-toggle btn-link"
                                        type="button" data-toggle="dropdown">{{ app.user.username }}
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    {% if is_granted('ROLE_MODERATOR') %}
                                        <li>
                                            <a href="{{ path('edit_article', {'id': 'new'}) }}">
                                                {% trans %}
                                                Create article
                                                {% endtrans %}
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('category_index') }}">
                                                {% trans %}
                                                Manage categories
                                                {% endtrans %}
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('moderating_articles') }}">
                                                {% trans %}
                                                Manage articles
                                                {% endtrans %}
                                            </a>
                                        </li>
                                    {% endif %}

                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li>
                                            <a href="{{ path('admin') }}">
                                                {% trans %}
                                                Manage users
                                                {% endtrans %}
                                            </a>
                                        </li>
                                    {% endif %}
                                    <li>
                                        <a href="{{ path('logout') }}">
                                            {% trans %}
                                            Logout
                                            {% endtrans %}
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% javascripts '@jquery' '@bootstrap_js' '@froala_editor'%}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
